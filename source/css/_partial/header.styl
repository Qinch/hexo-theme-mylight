#header 
  text-shadow 0 0 1px #fff
  margin-bottom 25px
  .header-content
    padding 2em 0.5em
  .header-div
    width 100%
  .header-div a
    font-family "Times New Roman",Georgia,Serif;

 .header-nav
    padding 0 0.5em
    border-bottom 2px solid #eee
    a
      display block
      padding 10px 10px 10px 10px
      float left
      &:hover
        font-weight bold
      &:active
        font-weight bold 

    #main-nav
      font-family font-title
      font-size 1.5em
    #sub-nav
      font-family font-title
      font-size 1.1em
      margin-top 9px
      @media screen and (max-width: 600px)
        display none
      .search
        display inline
        margin-top 0em;
        float right
  a
    color #999
    &:hover
      color color-link
      text-decoration none


h1
 font-weight normal
 font-size 2.5em
 line-height 1
h2
 font-weight normal
 font-size 1.2em
 line-height 1
 margin-top 10px



